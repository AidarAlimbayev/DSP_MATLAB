disp('%')
disp('%')
disp('% Для вывода ГРАФИКОВ ИХ, АЧХ и ФЧХ нажмите <ENTER>')
pause
figure('Name','Bandpass FIR Filter - Impulse Response, Magnitude, Phase','NumberTitle', 'off')
